/* Commentaire : Utilisez des commentaires pour expliquer le code */

/* 1. Reset ou normalisation */
body, h1, h2, h3, p, ul, ol, li {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  /* 2. Style global (polices, couleurs, arrière-plan) */
  body {
    font-family: Arial, sans-serif; /* Police par défaut */
    font-size: 16px;               /* Taille de texte par défaut */
    color: #333;                   /* Couleur de texte */
    background-color: #f5f5f5;     /* Couleur d'arrière-plan */
    line-height: 1.5;              /* Hauteur de ligne */
  }
  
  /* 3. Mise en forme des titres */
  h1, h2, h3 {
    font-weight: bold;
    color: #222;
  }
  
  h1 {
    font-size: 2rem;
  }
  
  h2 {
    font-size: 1.5rem;
  }
  
  h3 {
    font-size: 1.25rem;
  }
  
  /* 4. Mise en forme des liens */
  a {
    color: blue;
    text-decoration: none;
  }
  
  a:hover {
    text-decoration: underline;
  }
  
  /* 5. Mise en forme des listes */
  ul {
    list-style-type: disc;
    margin-left: 20px;
  }
  
  ol {
    list-style-type: decimal;
    margin-left: 20px;
  }
  
  /* 6. Mise en forme des boutons */
  button {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    border-radius: 5px;
  }
  
  button:hover {
    background-color: #0056b3;
  }
  
  /* 7. Grilles et mises en page (exemple avec Flexbox) */
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
  }
  
  .item {
    flex: 1;
    margin: 10px;
    text-align: center;
  }
  
  /* 8. Media Queries pour un design responsive */
  @media (max-width: 768px) {
    .container {
      flex-direction: column;
    }
  }
  